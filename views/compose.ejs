<%- include("partials/header"); %>

<h1>Compose</h1>

<form action="/compose" method="post">
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Title</label>
    <input type="Text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your title..." name="postTitle">
  </div> 
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Post</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="postBody" rows="7" cols="30"></textarea>
  </div> 
  <button type="submit" name="button" class="btn btn-primary" style="margin-top: 20px;">Publish</button>
</form>
<%- include("partials/footer"); %>